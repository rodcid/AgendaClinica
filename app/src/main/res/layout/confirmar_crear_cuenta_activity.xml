<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarCrearCuentaActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_confirmarcrearcuenta_tv_confirmarclaveyemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar clave y email"
            android:textColor="#24ABA3"
            android:textAllCaps="true"
            android:elegantTextHeight="true"
            android:textAlignment="center"
            android:textSize="16sp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:layout_marginBottom="16pt"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activity_confirmarcreaccuenta_til_confirmaremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Email"
                android:gravity="center"
                android:layout_marginVertical="4pt"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activity_confirmarcreaccuenta_til_confirmarclave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Clave"
                android:gravity="center"
                android:layout_marginVertical="4pt"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/activity_confirmarcrearcuenta_btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_btn"
            android:text="Registrar"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.52"
            android:layout_marginTop="16pt"
            />

        <Button
            android:id="@+id/activity_confirmarcrearcuenta_btn_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_cancelar_btn"
            android:letterSpacing="0.52"
            android:text="Cancelar"
            android:textColor="#827D7D"
            android:layout_marginVertical="4pt"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>